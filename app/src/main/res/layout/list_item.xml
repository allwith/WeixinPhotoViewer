<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="这是第一条朋友圈"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/iv1"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/iv2"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/iv1"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignTop="@id/iv4"
            android:layout_toRightOf="@id/iv4"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/iv5"
            android:layout_alignTop="@id/iv5"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_below="@id/iv4"
            />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignTop="@id/iv7"
            android:layout_toRightOf="@id/iv7"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignTop="@id/iv8"
            android:layout_toRightOf="@id/iv8"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>



</LinearLayout>